<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<?import javafx.scene.control.ToggleGroup?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.worldofenergy.mainDir.Presentation.QuizController">
   <children>
      <Label layoutX="264.0" layoutY="14.0" text="Quiz">
         <font>
            <Font size="36.0" />
         </font>
      </Label>
      <Label alignment="TOP_LEFT" layoutX="134.0" layoutY="96.0" prefHeight="114.0" prefWidth="334.0"
             text="By which year does FN want to substantially increase the share of renewable energy in the global energy mix?" textAlignment="CENTER" wrapText="true">
         <font>
            <Font size="15.0" />
         </font>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets top="10.0" />
         </padding>
      </Label>
      <HBox alignment="CENTER" layoutX="181.0" layoutY="286.0" prefHeight="63.0" prefWidth="240.0">
         <children>
            <RadioButton fx:id="r1" mnemonicParsing="false" text="A">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <toggleGroup>
                  <ToggleGroup fx:id="toggleGroup"/>
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="r2" mnemonicParsing="false" text="B">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <toggleGroup>
                  <fx:reference source="toggleGroup"/>
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="r3" mnemonicParsing="false" text="C">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <toggleGroup>
                  <fx:reference source="toggleGroup"/>
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="r4" mnemonicParsing="false" text="D">
               <HBox.margin>
                  <Insets right="10.0" />
               </HBox.margin>
               <toggleGroup>
                  <fx:reference source="toggleGroup"/>
               </toggleGroup>
            </RadioButton>
         </children>
      </HBox>
      <Label fx:id="answerA" layoutX="134.0" layoutY="192.0" prefHeight="17.0" prefWidth="208.0" text="A) 2025" textAlignment="CENTER" />
      <Label fx:id="answerB" layoutX="134.0" layoutY="210.0" prefHeight="17.0" prefWidth="208.0" text="B) 2030" textAlignment="CENTER" />
      <Label fx:id="answerC" layoutX="134.0" layoutY="227.0" prefHeight="17.0" prefWidth="208.0" text="C) 2035" textAlignment="CENTER" />
      <Label fx:id="answerD" layoutX="134.0" layoutY="244.0" prefHeight="17.0" prefWidth="208.0" text="A) 2025" textAlignment="CENTER" />
      <Button fx:id="submitBtn" layoutX="452.0" layoutY="294.0" mnemonicParsing="false" prefHeight="47.0" prefWidth="86.0" text="Submit" />
   </children>
</AnchorPane>
